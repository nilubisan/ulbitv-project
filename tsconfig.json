{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "outDir": "./build",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES5",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "strictNullChecks": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off"
  },
  "lib": ["ESNext"]
}